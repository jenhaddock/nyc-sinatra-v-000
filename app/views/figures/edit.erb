<h1>Update <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>

  <%Title.all.each do |t|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%=t.name%>" value="<%=t.id%>"><%=t.name%></input>
  <%end%>
  <br></br>

  <label>Create a New Landmark:</label>
  <br></br>
    <label>name:</label>
    <input  type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>

  <input type="submit" value="Edit Figure">
</form>
